@using CMS.Domain.Domains

@model List<PLItem>

<script src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js"></script>
<form action="/PageContent/CreatePageContent" method="post">
    <div class="container">
        <div class="form-group">
            <label class="control-label col-md-3">Publish Date</label>
            <div class="col-md-3">
                <div class="input-group input-medium date date-picker" data-date-format="dd-mm-yyyy" data-date-start-date="+0d">
                    <input type="date" class="form-control" name="PublishDate">
                    <span class="input-group-btn">
                        <button class="btn default" type="button">
                            <i class="fa fa-calendar"></i>
                        </button>
                    </span>
                </div>
                <!-- /input-group -->
                <span class="help-block"> Select date </span>
            </div>
        </div>

        @foreach (var item in Model)
        {

            <div class="@item.SizeValue" id="@item.Order">
                <br />
                <textarea id="txt_@item.Order" name="deger[]"></textarea>
                <textarea style="display:none;" name="order[]">@item.Order</textarea>
            </div>
            <input type="hidden" name="pageid" id="id" />
            <script>
            var pageid = $("#pageid").val();
            document.getElementById("id").value = pageid;


        ClassicEditor
            .create(document.querySelector('#txt_' +@item.Order), {

            })
            .catch(error => {
                console.error(error.stack);
                });
            </script>

        }
        <br />
    </div>

    <div class="container">

        <br />
        <button type="submit" class="btn btn-circle btn-info">Create Context</button>
    </div>

</form>
