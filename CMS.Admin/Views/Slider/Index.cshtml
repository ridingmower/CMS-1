
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create",
                                "Slider",
                                FormMethod.Post,
                                new { enctype = "multipart/form-data" }))
{
    <link href="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" />
    <h3 class="page-title">
        Slider
        <small>Add New Slider</small>
    </h3>
    <center>
        <div class="col-md-9">
            <form action="/Slider/Create" method="Post">
                <div class="row">Image Title:<input type="text" name="Title" /></div>
                <div class="form-check">
                    <label class="mt-checkbox">
                        <input type="checkbox" id="IsActive"> Active?
                        <input type="hidden" name="IsActive" value="false" id="Active">
                        <span></span>
                    </label>
                </div>
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                        <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="">
                    </div>
                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 10px;"></div>
                    <div>
                        <span class="btn default btn-file btn-circle green">
                            <span class="fileinput-new"> Select image </span>
                            <span class="fileinput-exists"> Change </span>
                            <input type="hidden" value="" name="..."><input type="file" name="file">
                        </span>
                        <a href="javascript:;" class="btn red fileinput-exists btn-circle" data-dismiss="fileinput"> Remove </a>
                    </div>
                </div>
                <button type="submit" class="btn btn-circle blue">Save</button>
            </form>
        </div>
        <div class="row container">
            @Html.Action("ImageList", "Slider")
        </div>
    </center>

   
    
}
@section scripts{
    <script>
            $(document).on('click', '#IsActive:checked', function (e) {
                var value = $('#IsActive').is(":checked");
                $('#Active').val(value); 
                
            });
        
    </script>
    <script src="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>

}